<%= form_for(@calling_script, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @calling_script.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@calling_script.errors.count, "error") %> prohibited this script from being saved:</h4>

      <ul>
      <% @calling_script.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  
  <div class="form-group required">
    <%= f.label :topic, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :topic, class: "form-control", required: "true" %>
    </div>
  </div>
  <div class="form-group required">
    <%= f.label :summary, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :summary, class: "form-control required", required: "true" %>
    </div>
  </div>
  <div class="form-group required">
    <%= f.label :content, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :content, class: "form-control", "aria-describedby" => "content-help", required: "true", rows: 10 %>
      <div class="form-text text-muted" id="content-help">
	This is where you write a suggested script or script outline for callers to use.
      </div>
    </div>
  </div>
    <div class="form-group">
    <%= f.label :notes, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :notes, class: "form-control", "aria-describedby" => "notes-help" %>
      <div class="form-text text-muted" id="notes-help">
	Here you can enter links and additional information to help the caller understand the issue.
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Create Script!", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
