<div class='row row-striped'>
  <div class='col-xs-7 mvm'>
    <h3><%= link_to calling_script.topic, calling_script %></h3>
    <%= link_to calling_script.summary, calling_script %>
  </div>
  <div class='col-xs-5'>
    <div class='row'>
      <div class='col-sm-5 mvm'>
        <span class="label label-primary call-numbers">
          <span class='badge badge-primary'>
            <%= calling_script.calls.size %>
          </span>
          calls
        </span>
      </div>
      <div class='col-sm-7 mvm'>
        <% if calling_script.called_yet?(current_user, @request.remote_ip) %>
	  <div class='row'>
	    <div class='col-sm-6'>
              <span class='label label-default'><span class="glyphicon glyphicon-check"></span>
		Called</span>
	    </div>
	    <div class='col-sm-6'>
              <%= link_to calling_script, class: 'btn btn-secondary' do %>
              <span class="glyphicon glyphicon-phone"></span>
              (call again)
	<% end %>
	</div>
	</div>
        <% else %>
          <%= link_to calling_script, class: 'btn btn-primary call' do %>
          <span class="glyphicon glyphicon-phone"></span>
          Call Now!
<% end %>
<% end %>
</div>
    </div>
  </div>
</div>

