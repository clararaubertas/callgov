<div class='row'>
  <div class='col-sm-6'>
    <% if @representative %>
      <%= render :partial => 'calling_info', :locals => {:representative => @representative} %>
    <% elsif @representatives && !(@representatives.empty?) %>
      <%= render :partial => 'rep_chooser', :locals => {:representatives => @representatives} %>
    <% else %>
      <%= render :partial => 'user_locator' %>
    <% end %>
  </div>
  <div class='col-sm-6'>
    <%= render :partial => 'show_script', :locals => { :calling_script => @calling_script } %>
  </div>
</div>
